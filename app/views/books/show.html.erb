<div class="container">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
<p><%= image_tag @user.get_profile_image(100,100) %></p>
<table class="table">
<tbody>

<tr>
 <th>name</th>
 <th><%= @user.name %></th>
 </tr>

<tr>
 <th>introduction</th>
 <th><%= @user.introduction %></th>
</tr>
</tbody>
</table>
<%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>

<%= form_with model: @book, url: books_path , method: :post do |f| %>
  <h2 class="mt-3">New book</h2>
  <th>Title</th>
  <div>
  <%= f.text_field :title %>
  </div>

  <th>Opinion</th>
  <div>
  <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book', class: "btn btn-success"%>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>
 <table class="table table-hover table-inverse">
  <tbody>
    <tr>
     <td>
      <%= link_to user_path(@book.user.id) do %>
       <%= image_tag @book.user.get_profile_image(100,100) %>
      <% end %>
     </td>
     <td>
      <%= link_to @book.title,books_path %>
     </td>
     <td>
      <%= @book.body %>
     </td>
     <td>
       <%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-success"%>
     </td>
     <td>
       <%= link_to "Destroy", book_path(@book.id) , method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-success"%>
     </td>
    </tr>

  </tbody>
    </div>
  </div>
</div>